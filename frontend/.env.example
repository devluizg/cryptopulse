# CryptoPulse Frontend - Environment Variables Example
# Copie este arquivo para .env.local e ajuste os valores

# API Backend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_PREFIX=/api/v1

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# App Config
NEXT_PUBLIC_APP_NAME=CryptoPulse
NEXT_PUBLIC_APP_VERSION=0.1.0

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Refresh Intervals (em milissegundos)
NEXT_PUBLIC_DASHBOARD_REFRESH_INTERVAL=30000
NEXT_PUBLIC_ALERTS_REFRESH_INTERVAL=15000
